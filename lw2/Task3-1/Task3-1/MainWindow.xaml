<Window x:Class="Task3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <DockPanel Margin="0,520,0,0" Background="IndianRed" >
            <TextBlock TextAlignment="Center" Text="Перетащите элемент сюда для удаления" Height="22" Width="1000"/>
        </DockPanel>
        <Canvas x:Name="Elts" Visibility="Visible" Margin="0,0,0,69" />
        <Canvas x:Name="Store" Visibility="Hidden" Margin="0,0,0,50">
            <Image x:Name="Water" Canvas.Left="100" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Fire" Canvas.Left="180" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Air" Canvas.Left="260" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Earth" Canvas.Left="340" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Dust" Canvas.Left="420" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Steam" Canvas.Left="500" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Lava" Canvas.Left="580" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Energy" Canvas.Left="660" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Mud" Canvas.Left="740" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Rain" Canvas.Left="820" Canvas.Top="30" Height="60" Width="60"/>
            <Image x:Name="Sea" Canvas.Left="100" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Pressure" Canvas.Left="180" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Cloud" Canvas.Left="260" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Ocean" Canvas.Left="340" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Gunpowder" Canvas.Left="420" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Stone" Canvas.Left="500" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Salt" Canvas.Left="580" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Plant" Canvas.Left="660" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Explosion" Canvas.Left="740" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Metal" Canvas.Left="820" Canvas.Top="120" Height="60" Width="60"/>
            <Image x:Name="Sand" Canvas.Left="100" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Storm" Canvas.Left="180" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="AtomicBomb" Canvas.Left="260" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Beach" Canvas.Left="340" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Desert" Canvas.Left="420" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Electricity" Canvas.Left="500" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Glass" Canvas.Left="580" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Wind" Canvas.Left="660" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Wave" Canvas.Left="740" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Sound" Canvas.Left="820" Canvas.Top="210" Height="60" Width="60"/>
            <Image x:Name="Smoke" Canvas.Left="100" Canvas.Top="300" Height="60" Width="60"/>
        </Canvas>
        <StackPanel Margin="0,515,0,0">
            <Button x:Name="Btn" Height="52" Content="Нажмите чтобы посмотреть открытые элементы" Click="BtnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
